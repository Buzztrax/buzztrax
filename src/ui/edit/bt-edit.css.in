/* custom styles for buzztrax-edit */

/* coloring for sequence view */

BtSequenceView row:nth-child(even) {
    background-color: @row_even_color;
}
BtSequenceView row:nth-child(odd) {
    background-color: @row_odd_color;
}

/* less spacious treeview */

BtSequenceView, #sequence-pattern-list, #wave-level-list, #wave-list {
  -GtkTreeView-horizontal-separator: 0;
  -GtkTreeView-vertical-separator: 1;
  -GtkWidget-focus-line-width: 0;/* deprecated 3.14 */
  -GtkWidget-focus-padding: 0;/* deprecated 3.14 */
  outline-width: 0;
  outline-offset: 0;
}

#BtSequenceHeaderLabel.entry {
  background-image: none;
  /*background-color: transparent;*/
  box-shadow: none;
}

/* less spacious buttons (for sequence headers) */
.mini {
  margin:  0;
  padding: 0;
}

@define-color mute-bg #f0a0a0;
.mute:hover, .mute:active {
  background-color: @mute-bg;
  background-image:
       -gtk-gradient(linear, 0 0, 0 1, from(darker(@mute-bg)), to(lighter(@mute-bg)));
}

@define-color solo-bg #a0a0f0;
.solo:hover, .solo:active {
  background-color: @solo-bg;
  background-image:
      -gtk-gradient(linear, 0 0, 0 1, from(darker(@solo-bg)), to(lighter(@solo-bg)));
}

@define-color bypass-bg #f0d090;
.bypass:hover, .bypass:active {
  background-color: @bypass-bg;
  background-image:
      -gtk-gradient(linear, 0 0, 0 1, from(darker(@bypass-bg)), to(lighter(@bypass-bg)));
}

GtkClutterEmbed, #machine-and-wire-editor {
    background-color: @machine_view_bg_color;
}

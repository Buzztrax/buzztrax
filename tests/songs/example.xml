<?xml version="1.0" encoding="UTF-8"?>

<!-- xsd:schemaLocation="http://www.buzztard.org buzztard.xsd" -->
<buzztard
  xmlns="http://www.buzztard.org/"
  xmlns:xsd="http://www.w3.org/2001/XMLSchema-instance"
  xsd:noNamespaceSchemaLocation="buzztard.xsd">

  <meta>
    <info>what a lovely tune</info>
    <name>example</name>
    <genre>dark-wave</genre>
    <bpm>120</bpm>
    <tpb>4</tpb>
    <bars>16</bars>
    <create-dts>2005-09-20T22:10:56Z</create-dts>
    <change-dts>2005-09-20T22:10:56Z</change-dts>
  </meta>
  
  <setup>    
    <machines>
      <machine type="sink" id="audio_sink">
        <properties>
          <property key="xpos" value="0.7"/>
          <property key="ypos" value="0.0"/>
        </properties>
        <globaldata name="volume" value="20"/>
        <globaldata name="bpm" value="145"/>
      </machine>
      
      <machine type="processor" id="amp1" plugin-name="volume">
        <properties>
          <property key="xpos" value="0.3"/>
          <property key="ypos" value="0.0"/>
        </properties>
        <globaldata name="minvolume" value="1.0"/>
      </machine>
      
      <machine type="source" id="sine1" plugin-name="audiotestsrc" voices="2">
        <properties>
          <property key="xpos" value="-0.7"/>
          <property key="ypos" value="0.0"/>
        </properties>
        <globaldata name="volume" value="80"/>
        <globaldata name="bpm" value="4"/>
        <voicedata name="volume" value="80" voice="0"/>
        <voicedata name="volume" value="10" voice="1"/>
        <patterns>
          <pattern id="sine1_beep" machine="sine1" name="beep" length="16">
            <tick time="0">
              <voicedata voice="0" name="note" value="C-3"/>
              <voicedata voice="0" name="volume" value="1.0"/>
              <voicedata voice="1" name="note" value="E-3"/>
              <voicedata voice="1" name="volume" value="1.0"/>
            </tick>
            <tick time="1">
              <voicedata voice="0" name="note" value="D-3"/>
              <voicedata voice="0" name="volume" value="1.0"/>
              <voicedata voice="1" name="note" value="F-3"/>
              <voicedata voice="1" name="volume" value="0.8"/>
            </tick>
          </pattern>
        </patterns>
      </machine>
    </machines>
    
    <wires>
      <wire src="sine1" dst="amp1" gain="1.5"/>
      <wire src="amp1" dst="audio_sink" gain="1.0" pan="-50"/>
    </wires>
  </setup>
  
  <sequence length="97" tracks="1">
    <labels>
      <label time="0" name="start"/>
      <label time="96" name="end"/>
    </labels>
    <tracks>
      <track index="0" machine="sine1">
        <position time="0" pattern="sine1_beep"/>
        <position time="48" pattern="sine1_beep"/>
        <position time="64" pattern="sine1___break"/>
      </track>
    </tracks>
  </sequence>
  
  <wavetable>
    <!-- loading file from harddisk -->
    <wave index="1" name="909base" url="file:///data/samples/basedrums/909base.wav"/>
    <!-- loading file from song archive -->
    <wave index="2" name="dreampad" url="file://!/wavetable/dreampad.wav"/>
  </wavetable>
  
</buzztard>

<?xml version="1.0" encoding="UTF-8"?>

<buzztard xmlns="http://buzztard.sourceforge.net/"
	xmlns:xsd="http://www.w3.org/2001/XMLSchema-instance" xsd:noNamespaceSchemaLocation="buzztard.xsd"
	name="example Song">

	<meta>
		<info>what a lovely tune</info>
    <name>example</name>
		<genre>dark-wave</genre>
    <bpm>120</bpm>
    <tpb>4</tpb>
    <bars>16</bars>
	</meta>
	
  <setup zoom="1.0">    
    <machines>
      <sink id="audio_sink">
        <machineui xpos="20" ypos="10"/>
        <globaldata name="volume" value="20"/>
        <globaldata name="bpm" value="145"/>
      </sink>
      
      <processor id="amp1" pluginname="volume">
        <machineui xpos="50" ypos="30"/>
      </processor>
      
      <source id="sine1" pluginname="sinesrc" voices="2">
        <machineui xpos="20" ypos="80"/>
        <globaldata name="volume" value="80"/>
        <globaldata name="bpm" value="4"/>
        <voicedata name="height" value="80" voice="0"/>
        <voicedata name="height" value="10" voice="1"/>
      </source>
    </machines>
    
    <wires>
      <wire src="sine1" dst="amp1" gain="1.5"/>
      <wire src="amp1" dst="audio_sink" gain="1.0" pan="-50"/>
    </wires>    
  </setup>
  
  <patterns>
    <pattern id="sine1_beep" machine="sine1" name="beep" length="16">
      <tick time="0">
        <globaldata name="waveform" value="sine"/>
        <voicedata voice="0" name="note" value="C-3"/>
				<voicedata voice="0" name="volume" value="1.0"/>
				<voicedata voice="1" name="note" value="E-3"/>
				<voicedata voice="1" name="volume" value="1.0"/>
      </tick>
      <tick time="1">
        <voicedata voice="0" name="note" value="D-3"/>
				<voicedata voice="0" name="volume" value="1.0"/>
				<voicedata voice="1" name="note" value="F-3"/>
				<voicedata voice="1" name="volume" value="0.8"/>
      </tick>
    </pattern>
  </patterns>
  
  <sequence>
    <labels>
      <label time="0" name="start"/>
      <label time="96" name="end"/>
    </labels>
    <tracks>
      <track index="0" machine="sine1">
        <position time="0" pattern="sine1_beep"/>
        <position time="48" pattern="sine1_beep"/>
        <position time="64" comand="stop"/>
      </track>
    </tracks>
  </sequence>
  
  <wavetable>
	  <!-- loading file from harddisk -->
		<wave index="0" name="909base" url="file:///data/samples/basedrums/909base.wav"/>
		<!-- loading file from song archive -->
		<wave index="1" name="dreampad" url="file://!/wavetable/dreampad.wav"/>
	</wavetable>
  
</buzztard>

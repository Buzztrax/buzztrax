<?xml version="1.0" encoding="UTF-8"?>

<buzztard
  xmlns="http://www.buzztard.org/"
  xmlns:xsd="http://www.w3.org/2001/XMLSchema-instance"
  xsd:noNamespaceSchemaLocation="buzztard.xsd">

  <meta>
    <info>a sine followed by an amp, both playing patterns</info>
    <name>simple 2</name>
    <genre>dark-wave</genre>
    <create-dts>2005-09-20T22:10:56Z</create-dts>
    <change-dts>2005-09-20T22:10:56Z</change-dts>
    <bpm>120</bpm>
    <tpb>4</tpb>
    <bars>16</bars>
  </meta>
  
  <setup>
    <machines>
      
      <machine type="sink" id="audio_sink">
        <properties>
          <property key="xpos" value="0.7"/>
          <property key="ypos" value="0.5"/>
        </properties>
      </machine>

      <machine type="processor" id="filter" plugin-name="bml-Elak-SVF">
        <properties>
          <property key="xpos" value="0.0"/>
          <property key="ypos" value="0.2"/>
        </properties>
      </machine>

      <machine type="source" id="guru2" plugin-name="bml-Arguelles-Guru-2" voices="0">
        <properties>
          <property key="xpos" value="-0.7"/>
          <property key="ypos" value="-0.5"/>
        </properties>
        <patterns>
          <pattern id="guru2_beeps" name="beeps" length="16">
            <tick time="0">
              <globaldata name="Note" value="c-3"/>
              <globaldata name="Length" value="80"/>
              <globaldata name="Hi-Volume" value="32766"/>
              <globaldata name="Flt-Decay" value="15"/>
            </tick>
            <tick time="4">
              <globaldata name="Note" value="e-3"/>
            </tick>
            <tick time="8">
              <globaldata name="Note" value="g-3"/>
            </tick>
            <tick time="10">
              <globaldata name="Note" value="g-3"/>
            </tick>
          </pattern>
        </patterns>
      </machine>
    </machines>
    
    <wires>
      <wire src="guru2" dst="filter" gain="1.0" panorama="-0.5"/>
      <wire src="filter" dst="audio_sink" gain="1.0" panorama="-0.5"/>
    </wires>    
  </setup>
  
  <sequence length="64" tracks="1">
    <labels>
      <label time="0" name="start"/>
      <label time="63" name="end"/>
    </labels>
    <tracks>
      <track index="0" machine="guru2">
        <position time="0" pattern="guru2_beeps"/>
        <position time="32" pattern="guru2_beeps"/>
      </track>
    </tracks>
  </sequence>
  
</buzztard>

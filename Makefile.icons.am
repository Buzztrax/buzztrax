prescale-svg:
	for size in 32 48 64; do \
		for icon in $(MACHINE_ICONS); do \
			rsvg-convert "$$icon" -w $$size -h $$size -f png -o "icons/hicolor/$${size}x$${size}/apps/`basename $$icon .svg`.png"; \
		done; \
	done


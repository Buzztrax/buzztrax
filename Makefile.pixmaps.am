prescale-svg:
	for size in 32 48 64; do \
		for icon in $(MACHINE_ICONS); do \
			rsvg-convert "$$icon" -w $$size -h $$size -f png -o "pixmaps/gnome/$${size}x$${size}/`basename $$icon .svg`.png"; \
		done; \
	done

